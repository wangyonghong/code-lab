<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:src="@drawable/ceshi" />


    <Button
        android:id="@+id/btn_alpha"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="alpha"></Button>

    <Button
        android:id="@+id/btn_rotate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_alpha"
        android:layout_toRightOf="@+id/btn_alpha"
        android:padding="10dp"
        android:text="rotate"></Button>

    <Button
        android:id="@+id/btn_scale"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_alpha"
        android:layout_alignLeft="@+id/btn_alpha"
        android:padding="10dp"
        android:text="alpha"></Button>

    <Button
        android:id="@+id/btn_translate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_rotate"
        android:layout_alignLeft="@+id/btn_rotate"
        android:padding="10dp"
        android:text="alpha"></Button>

</RelativeLayout>